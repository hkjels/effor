
extends layout

block content
  .container
    form.sixteen.columns(action='./', method='post')
      fieldset
        label(for='email')
          span.iconic.mail-alt
          != _.t('E-mail')
        input#email(name='email', type='email')
        label(for='password')
          span.iconic.unlocked
          != _.t('Password')
        input#password(name='password', type='password')
        input(name='login', type='submit', value=_.t('Login'))

